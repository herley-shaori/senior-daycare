<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LansiaPlaceServiceSelection"
    android:background="#D3D3D3">

    <ImageView
        android:id="@+id/titleImageLansiaPlaceServiceSelection"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/citra_lansia"
        android:layout_weight="0.4"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:scaleType="fitXY"
        />

    <View
        android:id="@+id/garisPertama"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/titleImageLansiaPlaceServiceSelection"
        android:background="#2196F3" />

    <LinearLayout
        android:id="@+id/pilihanPertama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/garisPertama">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Hari Daycare - Silver"
                android:textSize="18dp"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 350.000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termasuk makan siang dan 2x snack."
                android:textAllCaps="false"
                android:textStyle="italic"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tombolLayananSatu"
                android:background="@drawable/other_button"
                android:text="Pilih"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/garisKedua"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/pilihanPertama"
        android:background="#2196F3"/>

    <LinearLayout
        android:id="@+id/pilihanKedua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/garisKedua">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Hari Daycare - Gold"
                android:textSize="18dp"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 700.000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termasuk makan siang dan 2x snack.
\nTermasuk fasilitas antar jemput."
                android:textStyle="italic"
                android:textSize="18dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tombolLayananDua"
                android:background="@drawable/other_button"
                android:text="Pilih"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/garisKetiga"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/pilihanKedua"
        android:background="#2196F3" />

    <LinearLayout
        android:id="@+id/pilihanKetiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/garisKetiga">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Hari Daycare - Platinum"
                android:textSize="18dp"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 1.050.000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termasuk makan siang dan 2x snack.
\nTermasuk fasilitas antar jemput.
\nTermasuk penyediaan asisten pribadi."
                android:textStyle="italic"
                android:textSize="18dp"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tombolLayananTiga"
                android:background="@drawable/other_button"
                android:text="Pilih"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/garisKeempat"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/pilihanKetiga"
        android:background="#FFC107" />

</RelativeLayout>